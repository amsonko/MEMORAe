{% extends 'MEMORAeTextBundle::index.html.twig' %}
 {% block javascripts %}
     {{ parent()}}
     <script src="{{asset('JavaScript/plugins/accordion.js')}}"></script>
     <script src="{{asset('JavaScript/these.js')}}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link rel="stylesheet" href="{{asset('css/accordion.css')}}"/>
{% endblock %}

{%if theses is defined %}
    {% block These %}
        <div id="theseAccordion" class="accordion ui-widget ui-helper-reset">
            {% for section in theses %}
                <artical class="ac-panel">
                    <header class="ac-header ui-helper-reset ui-state-default">{{section.name}}</header>
                    <section class="ac-content ui-helper-reset ui-widget-content">
                        {% for these in section.medias %}
                            <div class="thumbnail blockImageTexte">
                                <a href="{{asset('uploads/documents/' ~ these.path)}}" target="_blank">
                                    <img src="{{asset('images/default.png')}}" alt="Generic placeholder thumbnail" class=" pull-left img-rounded"/>
                                </a>
                                <div class="caption">
                                    <h4>{{these.name}}</h4>
                                    <p>{{these.content|raw}}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </section>
                </artical>
            {% endfor %}
        </div>      
    {% endblock %}
{% endif%}
