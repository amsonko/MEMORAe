{% extends 'MEMORAeTextBundle::index.html.twig' %}
 
{% block javascripts %}
     {{ parent()}}
     <script src="{{asset('JavaScript/recherche.js')}}"></script>
{% endblock %}

{% if recherche is defined %}
    {% block Recherche %}
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 ">

                {% for section in recherche %}
                    {% for projet in section.medias %}
                        <div class="thumbnail blockImageTexte">
                            <img src="{{asset('images/'~projet.path)}}" class=" pull-left img-rounded"
                             alt="Generic placeholder thumbnail">
                            <div class="caption">
                                <h4>{{projet.name}}</h4>
                                <p>{{projet.content|raw}}</p>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>   
        </div>      

    {% endblock %}
{% endif %}